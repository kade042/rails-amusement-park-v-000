<div class="page-header"><h1>Sign In</h1></div>

<%= form_for(:user, :url => sessions_path) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autofocus: true%>
  </div>

  <div class="actions">
    <%= f.submit "Sign In" %>
  </div>
<% end %>
